# ============================================================
# Debug & API Configuration
# ============================================================
DEBUG=false
API_PORT=8000

# ============================================================
# Logging Configuration
# ============================================================
SERVICE_NAME=unknown

# Основной уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Если не указан, используется DEBUG при DEBUG=true, иначе INFO
LOG_LEVEL=INFO

# Уровни логирования для внешних библиотек
# Критичные библиотеки (telethon.network, etc.) - только серьезные ошибки
LOG_LEVEL_CRITICAL_LIBS=ERROR

# Шумные библиотеки (sqlalchemy, telethon, starlette, etc.) - минимум логов
LOG_LEVEL_NOISY_LIBS=WARNING

# Информативные библиотеки (alembic, aiogram, fastapi, uvicorn, etc.)
LOG_LEVEL_INFO_LIBS=INFO

# Отладочные библиотеки (dishka, asyncio, passlib, jose, etc.)
LOG_LEVEL_DEBUG_LIBS=WARNING

